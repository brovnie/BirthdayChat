<%- include("../partials/header"); %>
<div class="header-form">
    <p>
        Chat with people born the same day as you.
    </p>
    <img src="/images/form.svg" alt="party">
</div>
<div class="form-container">
    <h2>Sign up</h2>
    <div class="progress-bar">
        <div class="bar"></div>
        <div class="bar oppacity"></div>
    </div>
    <form action="/register" method="POST">
        <div>
            <label for="Email or username">Email or username</label>
            <input type="text" name="username" placeholder="Email or username" class="form__input">
        </div>
        <div>
            <label for="Password">Password</label>
            <input type="password" name="password" placeholder="Password" class="form__input">
        </div>
        <div>
            <label for="Repeat passport">Repeat password</label>
            <input type="password" name="password2" placeholder="Repeat password" class="form__input">
        </div>
        <div>
            <button class="button button-submit">Sign up</button>
        </div>
    </form>
</div>