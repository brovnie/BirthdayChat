
<div>
    <h2>Sign up</h2>
    <form action="/register" method="POST">
        <div>
            <label for="firstname">First Name</label>
            <input type="text" name="firstname" id="" placeholder="Firstname">
        </div>
        <div>
            <label for="lastname">Last Name</label>
            <input type="text" name="lastname" id="" placeholder="lastname">
        </div>
        <div>
            <label for="dateofbirth">Date of birth</label>
            <input type="date" name="dateofbirth" id="" data-date-format="DD MMMM YYYY">
        </div>
        <div>
            <label for="email">Email</label>
            <input type="text" name="email" id="" placeholder="Email">
        </div>
        <div>
            <label for="password1">Password</label>
            <input type="password" name="password1" id="" placeholder="Password">
        </div>
        <div>
            <label for="password2">Repeat Password</label>
            <input type="password" name="password2" id="" placeholder="Repeat Password">
        </div>
        <input type="submit" value="Submit">
    </form>
   
</div>